# app/convert-service/.env.example
# 이 파일을 .env로 복사하여 사용하세요

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# CORS Settings
CORS_ORIGIN=*

# File Upload Limits
MAX_FILE_SIZE=50  # MB
MAX_FILES=20      # Maximum number of files per request

# File Cleanup
CLEANUP_INTERVAL=60  # Minutes between cleanup runs
FILE_MAX_AGE=24      # Hours before files are deleted

# Sharp Configuration
# SHARP_CONCURRENCY=4  # Number of threads for image processing
# SHARP_CACHE=false    # Enable/disable Sharp cache